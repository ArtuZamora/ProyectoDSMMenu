<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RecuperarcontraActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:id="@+id/llnav"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            android:paddingTop="5dp">


            <Button
                android:id="@+id/backButton"
                android:layout_width="40dp"
                android:layout_height="38dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="8dp"
                android:background="@drawable/arrow_back"
                android:layout_marginEnd="8dp"
                android:paddingStart="8dp"
                android:paddingEnd="8dp" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:text="Recupera tu contraseña"
                android:textColor="@color/orange"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>


        <RelativeLayout
            android:id="@+id/rluser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="579dp"
            android:padding="5dp">

            <TextView
                android:id="@+id/my_hint_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@id/etUsuarioC"
                android:padding="5dp"
                android:text="Usuario"
                android:textColor="@color/orange"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/etUsuarioC"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20sp"
                android:inputType="textEmailAddress" />

        </RelativeLayout>

        <TextView
            android:id="@+id/my_textview"
            android:layout_width="400dp"
            android:layout_height="34dp"
            android:layout_above="@+id/btnEnviarCorreo"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="31dp"
            android:text="Se le enviará un correo para que pueda recuperar su contraseña"
            android:textColor="@color/orange" />

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="64dp"
            android:layout_height="65dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="172dp"
            android:layout_marginEnd="175dp"
            android:layout_marginBottom="408dp"
            android:visibility="gone"/>

        <Button
            android:id="@+id/btnEnviarCorreo"
            android:layout_width="233dp"
            android:layout_height="64dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="90dp"
            android:layout_marginBottom="438dp"
            android:padding="16dp"
            android:text="Enviar correo" />


    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>