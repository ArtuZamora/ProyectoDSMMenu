<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RecuperarcontraActivity">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:cropToPadding="false"
        android:scaleType="centerCrop"
        android:src="@drawable/fondo"
        android:alpha="0.1"

        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
                app:titleTextColor="@color/white" />

        </com.google.android.material.appbar.AppBarLayout>

        <RelativeLayout
            android:id="@+id/rluser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="579dp"
            android:padding="5dp">

            <TextView
                android:id="@+id/my_hint_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@id/etUsuarioC"
                android:padding="5dp"
                android:text="Correo"
                android:textColor="@color/orange"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/etUsuarioC"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20sp"
                android:inputType="textEmailAddress" />

        </RelativeLayout>

        <TextView
            android:id="@+id/my_textview"
            android:layout_width="400dp"
            android:layout_height="34dp"
            android:layout_above="@+id/btnEnviarCorreo"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="31dp"
            android:text="Se le enviará un correo para que pueda recuperar su contraseña"
            android:textColor="@color/orange" />

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="64dp"
            android:layout_height="65dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="172dp"
            android:layout_marginEnd="175dp"
            android:layout_marginBottom="408dp"
            android:visibility="gone"/>

        <Button
            android:id="@+id/btnEnviarCorreo"
            android:layout_width="233dp"
            android:layout_height="64dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="90dp"
            android:layout_marginBottom="438dp"
            android:padding="16dp"
            android:text="Enviar correo" />


    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>